<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.mortgagecalculator.ui.main.views.InputFragment"
        android:label="MainFragment"
        tools:layout="@layout/input_fragment"
        >
        <action
            android:id="@+id/action_mainFragment_to_scheduleFragment3"
            app:destination="@id/scheduleFragment" />
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.example.mortgagecalculator.ui.main.views.ScheduleFragment"
        android:label="ScheduleFragment"
        tools:layout="@layout/schedule_fragment"
        >
        <action
            android:id="@+id/action_scheduleFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_scheduleFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.mortgagecalculator.ui.main.views.DetailFragment"
        android:label="DetailFragment" >
        <action
            android:id="@+id/action_detailFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment" />
    </fragment>
    <fragment
        android:id="@+id/saveFragment"
        android:name="com.example.mortgagecalculator.ui.main.views.SaveFragment"
        android:label="SaveFragment" />
</navigation>